<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_middle"
    android:clipToPadding="false"
    app:cardBackgroundColor="@android:color/black"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:layout_collapseMode="pin"
    android:fitsSystemWindows="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:fitsSystemWindows="true">

        <ImageButton
            android:id="@+id/bt_menu"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_menu_grey" />

        <com.cbr.gradienttextview.GradientTextView
            android:id="@+id/page_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_toEndOf="@id/bt_menu"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:gt_color_list="@array/rainbow"
            app:gt_gradient_direction="right"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/ic_action_right"
            android:layout_alignParentEnd="true"/>

<!--        <com.cbr.gradienttextview.GradientTextView-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="P"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_centerVertical="true"-->
<!--            android:layout_marginEnd="8dp"-->
<!--            android:textStyle="bold"-->
<!--            android:textAllCaps="true"-->
<!--            app:gt_color_list="@array/rainbow"-->
<!--            app:gt_gradient_direction="right"/>-->

    </RelativeLayout>

</androidx.cardview.widget.CardView>

